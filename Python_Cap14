import pandas as pd
def amostra_dados(df):
    print("\n primeiras linhas do data frame:")
    print(df.head())
    print("\n Ultimas linhas do data frame:")
    print(df.tail())
def tratamento_dados(df):
    num_linhas, num_colunas = df.shape
    print(f"Dimensoes do DataFrame: {num_linhas} linhas  x {num_colunas} colunas \n")
    print("=" * 20)
    print("Valores nulos por colunas:")
    print(df.isnull().sum())
    duplicados = (df.duplicated().sum())
    print(f"Valores duplicados: {duplicados}")
    print("=" * 20)
    if duplicados > 0:
            df.drop_duplicates(inplace=True)
            print("Duplicatas encontradas e removidas.")


# leitura dos Data Frames
df_fertilizantes = pd.read_csv("fertilizer_prediction.csv")
df_produtos = pd.read_csv("produtos_agricolas.csv")

#programa
print(tratamento_dados(df_produtos))
print("Resumo estatistico basico da base:")
print(df_produtos.describe())
